{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers": ["src/controllers/index"],
      "@utilities": ["src/core/utilities/index"],
      "@middleware": ["src/core/middleware/index"],
      "@models": ["src/core/models/index"],
      "@db": ["src/core/utilities/database"],
      "@auth": ["src/core/utilities/credentialingUtils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/test/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
