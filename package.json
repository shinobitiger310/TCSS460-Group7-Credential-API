{
    "name": "tcss-460-auth-squared-template",
    "version": "1.0.0",
    "description": "TCSS-460-auth-squared Template - Student starter for Identity and Access Management (IAM) API project",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc && tsc-alias -p tsconfig.json",
        "start": "node dist/index.js",
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts",
        "start:full": "npm run docker:up && npm run dev",
        "local": "nodemon --exec ts-node -r tsconfig-paths/register -r dotenv/config src/index.ts",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:restart": "docker compose restart",
        "docker:delete": "npm run docker:down && rm -rf ~/apps/postgres",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "deploy": "git add . && git commit -m Heroku && git push heroku master"
    },
    "keywords": [
        "authentication",
        "authorization",
        "jwt",
        "identity",
        "education",
        "student-template",
        "tcss-460"
    ],
    "author": "Charles Bryan",
    "repository": {
        "type": "git",
        "url": "https://github.com/UWT-SET-TCSS460-LECTURE-MATERIALS/TCSS-460-auth-squared-template"
    },
    "engines": {
        "node": "22.14.0"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^22.10.5",
        "@types/nodemailer": "^6.4.14",
        "@types/pg": "^8.15.5",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/yamljs": "^0.2.34",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "dotenv": "^16.4.7",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^30.1.3",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.2"
    },
    "dependencies": {
        "@types/marked": "^5.0.2",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-validator": "^7.2.1",
        "highlight.js": "^11.11.1",
        "jsonwebtoken": "^9.0.2",
        "marked": "^16.4.0",
        "nodemailer": "^7.0.6",
        "pg": "^8.16.3",
        "swagger-ui-express": "^5.0.1",
        "twilio": "^5.9.0",
        "yamljs": "^0.3.0"
    }
}
